{
  "name": "vscode-manim",
  "displayName": "vscode-manim",
  "description": "Replicates Grant Sanderson's sublime workflow for manim in VSCode",
  "version": "0.0.2",
  "publisher": "bhoov",
  "author": {
    "name": "Ben Hoover",
    "email": "benhoover34@gmail.com",
    "url": "https://bhoov.com"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-manim.helloData",
        "title": "Hello Data from vscode-manim"
      },
      {
        "command": "vscode-manim.runScene",
        "title": "Run scene from vscode-manim"
      },
      {
        "command": "vscode-manim.checkpointPaste",
        "title": "Checkpoint Paste from vscode-manim"
      }
    ],
    "keybindings": [
      {
          "command": "vscode-manim.runScene",
          "key": "ctrl+shift+' ctrl+shift+r",
          "mac": "cmd+shift+' cmd+shift+r",
          "when": "editorTextFocus || terminalFocus"
      },
      {
          "command": "vscode-manim.checkpointPaste",
          "key": "ctrl+' ctrl+r",
          "mac": "cmd+' cmd+r",
          "when": "editorTextFocus || terminalFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }, 
  "repository": {
    "type": "git",
    "url": "https://github.com/bhoov/vscode-manim"
  },
  "icon": "logo.png"
}
